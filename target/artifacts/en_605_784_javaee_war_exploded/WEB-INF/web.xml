<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <session-config>
        <session-timeout>60</session-timeout>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.jsf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.faces</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <!-- RegistrationServlet Controller Servlet controls all actions -->
    <servlet>
        <servlet-name>RegistrationController</servlet-name>
        <servlet-class>ravotta.carrie.RegistrationController</servlet-class>
        <init-param>
            <param-name>DATASOURCE_NAME</param-name>
            <param-value>jhuDataSource2</param-value>
        </init-param>
        <init-param>
            <param-name>WLS_URL</param-name>
            <param-value>t3://localhost:7001</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationController</servlet-name>
        <url-pattern>/registrationcontroller</url-pattern>
    </servlet-mapping>

    <!-- Login servlet for verify user access -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ravotta.carrie.LoginServlet</servlet-class>
        <init-param>
            <param-name>MAX_LOGIN_ATTEMPTS</param-name>
            <param-value>3</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Registration for course JSP -->
    <servlet>
        <servlet-name>RegistrationSupportBean</servlet-name>
        <jsp-file>/RegistrarCourse.jsp</jsp-file>
        <init-param>
            <param-name>CourseCapacity</param-name>
            <param-value>5</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationSupportBean</servlet-name>
        <url-pattern>/RegistrarCourse.jsp</url-pattern>
    </servlet-mapping>

    <!-- Login servlet for verify user access -->
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>ravotta.carrie.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <!-- Default display page -->
    <welcome-file-list>
        <welcome-file>/login.xhtml</welcome-file>
    </welcome-file-list>
</web-app>