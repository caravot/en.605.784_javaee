    <!--</filter>-->
    <!--<filter-mapping>-->
        <!--<filter-name>LoginFilter</filter-name>-->
        <!--<url-pattern>/secured/*</url-pattern>-->
    <!--</filter-mapping>-->

    <welcome-file-list>
        <welcome-file>/welcome.jspx</welcome-file>
    </welcome-file-list>
</web-app>